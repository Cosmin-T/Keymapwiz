{
  "name": "typechron-viz",
  "version": "1.0.0",
  "description": "Keyboard Analytics Visualization App",
  "main": "main.js",
  "homepage": "https://github.com/yourusername/typechron-viz",
  "scripts": {
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "dist": "electron-builder --publish=never"
  },
  "build": {
    "appId": "com.typechron.viz",
    "productName": "Typechron Viz",
    "copyright": "Copyright Â© 2025 Typechron",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "index.html",
      "overlay.html",
      "mac_key_capture.swift",
      "package.json",
      "node_modules/",
      "!node_modules/.cache"
    ],
    "mac": {
      "icon": "build/icon.png",
      "target": "dmg",
      "identity": null,
      "hardenedRuntime": false,
      "gatekeeperAssess": false
    },
    "afterPack": "./sign-app.js",
    "dmg": {
      "title": "Typechron Viz",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icon.png"
    }
  },
  "keywords": [
    "keyboard",
    "analytics",
    "typing"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^37.2.0",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "electron-window-state": "^5.0.3"
  }
}
